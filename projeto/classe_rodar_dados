import random

class JogarDado():
    def __init__(self, nome:str):
        self.nome = nome

        if self.nome == 'd3':
            dado = random.randint(1,3)
            print(dado)

        if self.nome == 'd6':
            dado = random.randint(1,6)
            print(dado)
        
        if self.nome == 'd10':
            dado = random.randint(1,10)
            print(dado)


dado = JogarDado('d10')
dado2 = JogarDado('d3')
dado3 = JogarDado('d6')

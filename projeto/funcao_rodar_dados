import random

def rolar_dado(self):
    dado = input('Que dado desejas rolar? ')

    if dado == 'd3':
        dado = random.randint(1,3)
        print(dado)

    elif dado == 'd6':
        dado = random.randint(1,6)
        print(dado)
        
    elif dado == 'd10':
        dado = random.randint(1,10)
        print(dado)

    else:
        print('Ops! NÃ£o pode rolar esse dado! Escolha entre um d3, d6 ou d10!')
        dado = input('Que dado desejas rolar? ')
